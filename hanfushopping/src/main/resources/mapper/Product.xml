<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.dao.ProductDao">
	
	<resultMap id="resultMap" type="Product">
		<id property="id" column="id" javaType="long" />
	</resultMap>
	
	<select id="getPhoto" resultType="Photo">
		select f_id id, f_photo	photo,f_photo_file photoFile 
		from t_product
		where f_id=#{id}
	</select>

	<update id="updatePhoto" parameterType="Photo">
		update t_product set f_photo=#{photo}
		where f_id=#{id}
	</update>
	
